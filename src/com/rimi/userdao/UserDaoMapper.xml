<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >
<mapper namespace="com.rimi.userdao.UserDao">
	<resultMap type="UserBean" id="zzc">
		<id property="id" column="user_id" />
		<result property="name" column="user_name" />
		<result property="password" column="user_password" />
	</resultMap>
	<select id="getuserInfo" parameterType="UserBean" resultMap="zzc">
		select * from user
		<where><!--where可以解决where问题  -->

			1=1  
			<if test="name != null and name  != '%%'">
				and uer_name like #{name} 
			</if>
			<if test="password ! = null">
				and uer_password like '%${password}%' 
			</if>

			 and 1+1=2
		</where>
	</select>

	<select id="userinfo" resultMap="zzc">
		select * from user
	</select>

	<select id="login" parameterType="UserBean" resultMap="zzc">
		select * from user
		<!-- trim可以解决","和where还有and问题,比较全面,推荐使用 -->
		<trim prefix="where" prefixOverrides="and">
			<if test="name ! = null and name ! = ''">
				and uer_name = #{name} 
			</if>
			<if test="password ! = null and name ! = ''">
				and uer_name = #{password} 
			</if>
		</trim>
	</select>
	<select id="getUserById" parameterType="int" resultMap="zzc">
		select *
		from user where user_id = #{id}
	</select>
	<update id="updateUser" parameterType="UserBean">
		update user
		<set><!--set可以解决"," 的问题 -->
			<if test="name!=null and name ! = ''">
				user_name=#{name}
			</if>
			<if test="password!=null">
				user_password=#{password}
			</if>
		</set>
		where user_id=#{id}
	</update>

</mapper>
